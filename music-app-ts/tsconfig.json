{
  "compilerOptions": {
    "outDir": "js", // Biên dịch vào thư mục js
    "target": "ES6", // cho phép biên dịch code TS sang ES6
    "module": "commonjs", // CommonJS là tiêu chuẩn được sử dụng trong Node.js để làm việc với các module
    "removeComments": true, // xoá comments khi biên dịch sang file js,
    "esModuleInterop": true
  }
}